<div class="col">
<div class="card">
  <div class="card border" style="width: 90%;">
    <%= image_tag(product.image_principal, class: 'card-img-top', size: "300x180") %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= product.name %></p>
        <%= link_to image_tag("cart2.png", size: "25x25"), add_product_to_cart_path(product.id), remote: true, class: "btn btn-success text-left"%>
      <div class="col-sm text-right">
        <%= product.pretty_price %>
      </div >
    <br>
    <%= link_to I18n.t(:show), product_path(product),  class: 'btn btn-primary btn-lg btn-block' %>
  </div>
</div>
</div>