<div class="col-3">
  <div class="card border" style="width: 15rem;">
    <%= image_tag(product.image_principal, class: 'card-img-top', size: "300x180") %>
        <div class="card-body">
          <p class="card-text"><%= product.name %></p>
          <div class="text-left">
            <%= link_to image_tag("cart2.png", size: "25x25", border: 0) ,:class => "button_with_image_save" %>
          </div>
          <div class="text-right">
            <%= product.pretty_price %>
          </div >
          <br>
          <%= link_to 'Ver', product_path(product),  class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      </div>
</div>
