<!-- Button trigger modal -->
<h1 class='mt-2'>Sliders</h1>
<%= render 'flash_message'%>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th>Sliders</th>
      <th class='text-right'><%= link_to 'Nuevo slider', new_backend_slider_path, remote: true, class: 'btn btn-primary' %></th>
    </tr>
  </thead>
  <tbody id='sliders_container'>
    <%= render @sliders %>
  </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    </div>
  </div>
</div>