<tr id='<%= dom_id(slider) %>'>
  <td><%= slider.name %></td>
  <td class='text-right'>
    <%= link_to 'Ver', backend_slider_path(slider), remote: true, class: 'btn btn-sm btn-outline-info' %>
    <%= link_to 'Editar', edit_backend_slider_path(slider), remote: true, class: 'btn btn-sm btn-outline-warning' %>
    <%= link_to 'Borrar', backend_slider_path(slider), method: :delete, remote: true, data: { confirm: 'Esta seguro?' }, class: 'btn btn-sm btn-outline-danger' %>
  </td>
</tr>